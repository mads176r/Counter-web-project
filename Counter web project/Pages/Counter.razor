@page "/counter"

<PageTitle>Counter</PageTitle>

@using Counter_web_project.Data.Counter;

<h1>Counter</h1>

<p role="status">Current count: @count.Value</p>

<button class="btn btn-primary" @onclick="IncrementCount">Increment</button>
<button class="btn btn-secondary" @onclick="DecrementCount">Decrement</button>
<button class="btn btn-danger" @onclick="ResetCount">Reset</button>


@code {
    private Count count = new Count();

    private void IncrementCount()
    {
        count.Increment();
    }

    private void DecrementCount()
    {
        count.Decrement();
    }

    private void ResetCount()
    {
        count.Reset();
    }
}
